---
export interface NewsCardProps {
  image: string;
  publisher: string;
  time: string;
  title: string;
  preview: string;
  category: string;
  readTime: string;
}

const { image, publisher, time, title, preview, category, readTime } = Astro.props;
---
<div class="flex flex-col bg-white rounded-3xl shadow-md overflow-hidden">
  <!-- Top: Image Section -->
  <img src={image} alt={title} class="h-40 w-full object-cover" />

  <!-- Bottom: Content Section -->
  <div class="p-4 flex flex-col justify-between">
    <!-- Publisher and Time -->
    <div class="flex items-center space-x-2 text-gray-500 text-sm">
      <span class="font-semibold text-black">{publisher}</span>
      <span>•</span>
      <span>{time}</span>
    </div>

    <!-- Title -->
    <h4 class="mt-2 text-lg font-semibold text-gray-800 hover:text-red-600 cursor-pointer">
      {title}
    </h4>

    <!-- Article Preview -->
    <p class="mt-2 text-sm text-gray-600">{preview}</p>

    <!-- Category and Read Time -->
    <div class="mt-4 text-gray-500 text-xs">
      <span class="text-red-600 font-semibold">{category}</span> • {readTime} min read
    </div>
  </div>
</div>
